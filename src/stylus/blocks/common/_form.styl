.form
	padding 27px 50px
	overflow hidden
	border-radius 8px
	display flex
	position relative
	background linear-gradient(196.31deg, #D53F3F 15.53%, #9E2020 81.03%)
	&__container
		flex-basis 67%
		&-desc
			font-size 1.375rem
			margin-bottom 5px
			color rgba(255, 255, 255, 0.7)
			line-height 30px
			font-family $Regular
		&-title
			margin-bottom 20px
			font-size 2rem
			line-height 44px
			color $white
			font-family $Regular
		&-form
			display flex
			flex-wrap wrap
			&-input
				flex-basis 37%
				background-color $white
				overflow hidden
				margin-bottom 15px
				margin-right 20px
				align-items center
				width 100%
				display flex
				border-radius 8px
				position relative
				&:nth-child(2)
					margin-right 0
				& i
					position absolute
					transition .3s
					left 20px
					padding-right 15px
					color #e7e7e7
					font-size 20px
					border-right 1px solid #e7e7e7
				& input
					border 1px solid #e7e7e7
					font-size 0.825rem
					padding 7.5px 15px 7.5px 65px
					border-radius 8px
					overflow hidden
					line-height 31px
					color #b2b2b2
					width 100%
					transition .3s
					&:focus
						border-color $red
					&:focus ~ i
						color $red
					&:hover
						border-color $red
					&:hover ~ i
						color $red
			&-button
				margin-right 20px
				flex-basis 37%
				& button
					background-color #2f2f2f
					padding 16px
					text-transform uppercase
					color $white
					font-size 0.75rem
					font-family $Bold
					cursor pointer
					line-height 16px
					border-radius 8px
					border none
					width 100%
					transition .3s
					&:hover
						box-shadow 0 0 4px $text
			&-policy
				display flex
				align-items center
				flex-basis 45%
				& span
					font-family $Regular
					font-size 0.75rem
					line-height 16px
					color $white
					& a
						font-family $Regular
						font-size 0.75rem
						margin-left 3px
						line-height 16px
						margin-left 3px
						color $white
						display display block
						text-shadow: 0px 3.6px #b12a2a
						border-bottom 1px solid rgba(255, 255, 255, 0.2)
						transition .3s
						&:hover
							color $text
							border-color $text
	&__bg
		position absolute
		height 100%
		right 22px
		top 0
		bottom 0
		width 40%
		background url(/images/form-bg.png) 0% 50% no-repeat
		background-size cover
@media(max-width: 1065px)
	.form
		&__container
			flex-basis 100%
			z-index 2
			position relative
			&-form
				&-input
					flex-basis 48%
				&-button
					flex-basis 48%
				&-policy
					flex-basis 48%
		&__bg
			opacity .5
			right -6%
			z-index 1
@media(max-width: 650px)
	.form
		padding 27px 30px
		&__container
			flex-basis 100%
			z-index 2
			position relative
			&-title
				font-size 1.7rem
				line-height 32px
			&-form
				&-input
					flex-basis 100%
					&:nth-child(1)
						margin-right 0
				&-button
					flex-basis 100%
					margin-right 0
					margin-bottom 15px
				&-policy
					flex-basis 100%
