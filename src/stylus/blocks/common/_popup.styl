.popup
	position fixed
	z-index -1
	width 352px
	left calc(50% - 176px)
	top calc(50% - 280.5px)
	opacity 0
	&__active
		z-index 9999
		opacity 1
	&-bg
		background-color rgba(0,0,0,.7)
		position fixed
		top 0
		left 0
		bottom 0
		right 0
		z-index -1
		opacity 0
	&__button
		margin-top 21px
		background-color transparent
		padding 12px
		text-transform uppercase
		color $white
		opacity 0
		font-size 0.75rem
		font-family $Bold
		cursor pointer
		line-height 17px
		border-radius 8px
		border 1px solid $white
		width 100%
		transition box-shadow .3s
		display flex
		align-items center
		justify-content center
		& i
			margin-top -1px
			margin-right 5px
		&:hover
			box-shadow 0 0 4px $white
	&__bg2
		border none
		padding 0
		position absolute
		left 0
		width 100%
		top 0
		bottom 0
		height 100%
		z-index 1
		margin-bottom 0
		background linear-gradient(239.03deg, #D53F3F 15.53%, #9E2020 81.03%)
	&__bg
		position absolute
		height 100%
		left -50%
		top 0
		z-index 2
		bottom 0
		width 100%
		background url(/images/callback-bg.png) 100% 50% no-repeat
		background-size cover
	&-close
		position fixed
		top 80px
		cursor pointer
		z-index 10000
		right 80px
		font-size 40px
		color $white
		opacity 0
		transition color .3s
		&:hover
			color $red
	&__title
		font-size 2.625rem
		color $white
		font-family $SemiBold
		line-height 46px
		opacity 0
		text-align center
		margin-bottom 70px
	&__form
		padding 25px 0 0 0
		display flex
		flex-wrap wrap
		opacity 0
		border-radius 8px
		overflow hidden
		position relative
		justify-content space-between
		&-input
			padding 0 30px
			z-index 3
			width 100%
			&:nth-child(3)
				margin-bottom 25px
				.popup__form-input-input
					margin-bottom 0
			&-title
				color $white
				font-size 0.75rem
				font-family $SemiBold
				line-height 16px
				margin-bottom 10px
			&-input
				width 100%
				display flex
				margin-bottom 15px
				position relative
				align-items center
				& i
					position absolute
					transition .3s
					left 20px
					padding-right 15px
					color #e7e7e7
					font-size 20px
					border-right 1px solid #e7e7e7
				& input
					border 1px solid #e7e7e7
					font-size 0.825rem
					padding 7.5px 15px 7.5px 65px
					border-radius 8px
					overflow hidden
					line-height 27px
					color #b2b2b2
					width 100%
					transition .3s
					&:focus
						border-color $red
					&:focus ~ i
						color $red
					&:hover
						border-color $red
					&:hover ~ i
						color $red
		&-button
			z-index 3
			width 100%
			padding 0 30px
			margin-bottom 15px
			& button
				background-color $text
				padding 16px
				text-transform uppercase
				color $white
				font-size 0.75rem
				font-family $Bold
				cursor pointer
				line-height 16px
				border-radius 8px
				border none
				width 100%
				transition .3s
				&:hover
					box-shadow 0 0 4px $text
		&-policy
			z-index 3
			display flex
			align-items center
			flex-basis 100%
			padding 0 30px
			margin-bottom 20px
			justify-content center
			& span
				font-family $Regular
				font-size 0.75rem
				line-height 16px
				color $white
				& a
					font-family $Regular
					font-size 0.75rem
					line-height 16px
					display inline-block
					margin-left 3px
					color $white
					display display block
					border-bottom 1px solid rgba(255, 255, 255, 0.2)
					transition .3s
					&:hover
						color $text
						border-color $text
		&-footer
			z-index 3
			background rgba(0, 0, 0, 0.1)
			display flex
			align-items center
			justify-content center
			width 100%
			padding 10px 30px
			& p
				width 80%
				color $white
				text-align center
				font-size 0.75rem
				line-height 20px
				font-family $Light
.message-success
	position fixed
	z-index -1
	opacity 0
	overflow hidden
	width 300px
	left calc(50% - 150px)
	top calc(50% - 163px)
	&__active
		z-index 9999
		opacity 1
	&-bg
		background-color rgba(0,0,0,.7)
		position fixed
		top 0
		left 0
		bottom 0
		right 0
		z-index -1
		opacity 0
	&-button
		margin-top 21px
		background-color $red
		padding 12px
		text-transform uppercase
		color $white
		opacity 0
		font-size 0.75rem
		font-family $Bold
		cursor pointer
		line-height 17px
		border-radius 8px
		border 1px solid transparent
		width 100%
		transition box-shadow .3s
		display flex
		align-items center
		justify-content center
		& i
			margin-top -1px
			margin-right 5px
		&:hover
			box-shadow 0 0 4px $red
	&-close
		position fixed
		top 80px
		cursor pointer
		right 80px
		z-index 10000
		font-size 40px
		color $white
		transition color .3s
		&:hover
			color $red
	&-title
		font-size 2.625rem
		color $white
		font-family $SemiBold
		line-height 46px
		opacity 0
		text-align center
		margin-bottom 70px
	&-container
		opacity 0
		padding 25px
		position relative
		background-color $white
		border-radius 8px
		&-bg
			background url(/images/message-bg.jpg) 50% 50% no-repeat
			background-color cover
			opacity .1
			filter grayscale(100%)
			position absolute
			top 0
			z-index 2
			left 0
			width 100%
			height 100%
		&-title
			color $black
			font-size 1.375rem
			font-family $Regular
			line-height 33px
			margin-bottom 15px
			z-index 3
			position relative
		&-text
			color #232323
			font-family $Regular
			line-height 24px
			font-size 0.825rem
			z-index 3
			position relative
@media(max-width: 991px)
	.message-success
		&-close
			top 15px
			right 15px
	.popup
		&__form
			&-policy
				& span
					& a
						margin-left 3px
		&-close
			top 15px
			right 15px
@media(max-width: 414px)
	.popup
		width calc(100% - 40px)
		left 20px
		right 20px
		&__title
			font-size 1.725rem
			margin-bottom 20px
			margin-top 20px
	.message-success
		width calc(100% - 40px)
		left 20px
		right 20px
		&-title
			font-size 1.725rem
			margin-bottom 20px
			margin-top 20px
@media(max-width: 374px)
	.popup
		&__form
			&-policy
				& span
					a
						margin-left 0
