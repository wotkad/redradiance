#about
	background-color #FCFCFC
	padding 50px 0
.about
	display flex
	justify-content space-between
	flex-wrap wrap
	&__clients
		display flex
		flex-wrap wrap
		border-radius 8px
		padding 30px 47px
		flex-basis 100%
		background #313131
		&-title
			flex-basis 100%
			display flex
			position relative
			justify-content center
			margin-bottom 30px
			font-family $SemiBold
			font-size 1.375rem
			line-height 30px
			color $white
			padding-bottom 21px
			&:after
				content ''
				position absolute
				width 80px
				left calc(50% - 40px)
				bottom 0
				display inline-block
				height 1px
				background-color rgba(255, 255, 255, 0.6)
		&-items
			display flex
			flex-wrap wrap
			justify-content space-between
			&-item
				flex-basis 25%
				display flex
				align-items center
				justify-content center
				margin 27px 0
	&__block
		margin 0 0 30px 0
		border-radius 8px
		overflow hidden
		flex-wrap wrap
		flex-basis 61%
		display flex
		justify-content space-between
		position relative
		border 1px solid #E7E7E7
		&__gradient
			background-color $white
			position absolute
			border-radius 8px
			z-index 2
			width 100%
			height 100%
			top 0
			left 0
		&__about
			z-index 3
			position relative
			flex-basis 100%
			padding-top 30px
			display flex
			flex-wrap wrap
			overflow hidden
			&-title
				padding 0 0 20px 30px
				font-family $Regular
				font-size 1.375rem
				line-height 30px
				flex-basis 50%
				z-index 2
				color $text
				position relative
				margin-bottom 30px
				align-items center
				&:after
					content ''
					width 80px
					height 1px
					background-color $red
					position absolute
					left 30px
					bottom 0
			&-button
				padding 0 30px 0 0
				align-items flex-start
				flex-basis 50%
				display flex
				justify-content flex-end
				&-link
					background-color $red
					padding 16px
					text-transform uppercase
					color $white
					display inline-block
					font-size 0.75rem
					font-family $Bold
					cursor pointer
					line-height 16px
					border-radius 8px
					transition .3s
					&:hover
						box-shadow 0 0 4px #d66060
			&-body
				padding 0 30px
				& p
					font-family $Regular
					margin-bottom 20px
					color $text
					line-height 24px
			&-footer
				padding 30px 30px
				background-color rgba(0, 0, 0, 0.03)
				display flex
				flex-basis 100%
				&-item
					margin-right 55px
					&:last-child
						margin-right 0
					& span
						&:nth-child(1)
							font-family $Bold
							font-size 2rem
							line-height 44px
							color $red
						&:nth-child(2)
							color $text
							font-family $Bold
							font-size 0.825rem
							padding-top 2px
							line-height 24px
							margin-left 10px
							border-top 1px solid $red
	&__team
		border-radius 8px
		background-color $white
		padding 30px 0
		margin-bottom 30px
		overflow hidden
		flex-basis 35%
		border 1px solid #E7E7E7
		&-text
			font-family $Regular
			font-size 0.825rem
			padding 0 30px
			line-height 24px
			color $text
			margin-bottom 30px
		&-title
			padding 0 0 20px 30px
			font-family $Regular
			font-size 1.375rem
			line-height 30px
			color $text
			position relative
			margin-bottom 30px
			align-items center
			&:after
				content ''
				width 80px
				height 1px
				background-color $red
				position absolute
				left 30px
				bottom 0
		&-slider
			position relative
			width 100%
			display flex
			.swiper-button-prev,
			.swiper-button-next
				border-radius 50%
				width 46px
				z-index 10
				cursor pointer
				transition .3s
				height 46px
				border 1px solid transparent
				background-color $red
				display flex
				background-image none
				justify-content center
				align-items center
				& i
					margin-top -1px
					color $white
					font-size 20px
			.swiper-button-next
				&:hover
					background-color $white
					border-color $red
				&:hover
					& i
						color $red
				& i
					margin-top -1px
					transition .3s
					margin-right -2px
			.swiper-button-prev
				&:hover
					background-color $white
					border-color $red
				& i
					transition .3s
					margin-left -2px
				&:hover
					& i
						color $red
			.about__slide
				display flex
				justify-content center
				align-items center
				flex-direction column
				&-photo
					& img
						width 84px
						height 84px
						max-width 84px
						max-height 84px
						border-radius 50%
				&-title
					font-size 1.125rem
					line-height 27px
					font-family $SemiBold
					color #232323
					margin-bottom 5px
				&-desc
					font-family $Light
					font-size 1rem
					line-height 27px
					color $text
					text-align center
@media(max-width: 1080px)
	#about
		padding 40px 0
@media(max-width: 1040px)
	.about
		&__team
			flex-basis 100%
		&__block
			flex-basis 100%
			&__about
				&-title
					flex-basis 100%
					order 1
				&-button
					flex-basis 100%
					order 3
					margin-bottom 20px
					padding 0 30px
					justify-content center
					align-items center
					& a
						width 275px
						text-align center
				&-body
					flex-basis 100%
					order 2
				&-footer
					flex-basis 100%
					order 4
					display flex
					flex-wrap wrap
					&-item
						margin-right 30px
@media(max-width: 991px)
	.about
		&__clients
			&-items
				&-item
					flex-basis 33%
@media(max-width: 768px)
	#about
		padding 30px 0 40px
@media(max-width: 650px)
	.about
		&__clients
			padding 30px 10px
			&-items
				&-item
					flex-basis 50%
@media(max-width: 414px)
	.about
		&__block
			&__about
				&-button
					& a
						width 100%
