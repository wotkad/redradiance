.business__info
	display flex
	flex-wrap wrap
	justify-content space-between
	padding-bottom 50px
	padding-top 50px
	&-title
		flex-basis 70%
		font-size 1.375rem
		color $black
		font-family $Regular
		line-height 33px
		margin-bottom 30px
	&-block
		flex-basis 48%
		& p
			font-family $Light
			color #232323
			font-size 0.825rem
			line-height 26px
			margin-bottom 20px
	&:nth-child(1)
		padding-bottom 30px
	&:nth-child(2)
		padding-top 0
@media(max-width: 991px)
	.business__info
		padding-bottom 20px
		padding-top 40px
		&:nth-child(1)
			padding-bottom 10px
		&-title
			flex-basis 100%
			margin-bottom 20px
		&-block
			flex-basis 100%
@media(max-width: 768px)
	.business__info
		padding-top 30px
