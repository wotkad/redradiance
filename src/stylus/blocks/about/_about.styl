#page-about
	.home
		&__block
			&-title
				&-dynamic
					margin-right 10px
.aboutpage
	.about__clients
		margin-top 50px
		margin-bottom 0
	.projects
		border-top none
	&__block
		padding 50px 0
		&:nth-child(2)
			padding-bottom 20px
		&-title
			font-size 1.375rem
			line-height 33px
			color $black
			font-family $Regular
			margin-bottom 25px
		&-text
			& p
				color $text
				font-family $Regular
				font-size 0.825rem
				line-height 24px
				margin-bottom 10px
				&:last-child
					margin-bottom 0
	&__gray
		background-color #FCFCFC
@media(max-width: 991px)
	.aboutpage
		.about__clients
			margin-top 0px
		&:nth-child(2)
			padding-top 40px
		&__block
			padding 40px 0
			&:nth-child(2)
				padding-bottom 10px
