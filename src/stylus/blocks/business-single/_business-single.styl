#business-single
	padding-bottom 50px
	.blog-single__sidebar-item
			display none
.contentCallback
	background-color #FCFCFC
	border-bottom 1px solid #E7E7E7
.business-single
	display flex
	justify-content space-between
	.projects
		border-top 1px solid #E7E7E7
		border-bottom 0
		flex-basis 69%
		overflow hidden
		margin-top 10px
		&__slider
			.swiper-button-next
				right 30px
			.swiper-button-prev
				left 30px
	&__clients
		display flex
		flex-wrap wrap
		border-radius 8px
		padding 30px 47px
		flex-basis 100%
		background url(/images/clients-bg.png) 50% 50% no-repeat, linear-gradient(37.26deg, #232323 24.02%, #313131 76.94%)
		background-size cover
		&-title
			flex-basis 100%
			display flex
			position relative
			justify-content center
			margin-bottom 30px
			font-family $SemiBold
			font-size 1.375rem
			line-height 30px
			color $white
			padding-bottom 21px
			&:after
				content ''
				position absolute
				width 80px
				left calc(50% - 40px)
				bottom 0
				display inline-block
				height 1px
				background-color rgba(255, 255, 255, 0.6)
		&-items
			display flex
			flex-wrap wrap
			justify-content space-between
			&-item
				flex-basis 25%
				display flex
				align-items center
				justify-content center
				margin 27px 0
.content__table-title
	margin 30px 0 0 0
	font-family $Regular
	font-size 1.375rem
	line-height 33px
	color $black
.table-full
	.content
		&__table
			margin 30px 0
			&-titles
				display flex
				border-bottom 1px solid #e7e7e7
				&-title
					font-family $SemiBold
					font-size 0.75rem
					line-height 16px
					color $text
					padding 15px
					&:nth-child(1)
						flex-basis 20%
					&:nth-child(2)
						flex-basis 25%
					&:nth-child(3)
						flex-basis 30%
					&:nth-child(4)
						flex-basis 25%
			&-items
				display flex
				&:nth-child(2n)
					background-color rgba(242, 242, 242, 0.6)
				&-item
					font-family $Light
					font-size 0.825rem
					line-height 24px
					color $text
					padding 18px
					&:nth-child(1)
						flex-basis 20%
						font-family $SemiBold
						color $red
					&:nth-child(2)
						flex-basis 25%
					&:nth-child(3)
						flex-basis 30%
					&:nth-child(4)
						flex-basis 25%
.side-wrapper
	padding-top 50px
	flex-basis 27%
	.side-callback
		position sticky
		top 111.6px
		margin-bottom 44px
		border-radius 8px
		border 1px solid #E7E7E7
		background-color $white
		overflow hidden
		&-form
			padding 25px 0 0 0
			&-title
				font-family $SemiBold
				font-size 0.75rem
				line-height 16px
				color $text
				padding 0 30px
				margin-bottom 10px
			& input
				border 1px solid #e7e7e7
				font-size 0.825rem
				padding 7.5px 15px 7.5px 65px
				border-radius 8px
				overflow hidden
				line-height 27px
				color #b2b2b2
				width 100%
				transition .3s
				&:focus
					border-color $red
				&:focus ~ i
					color $red
				&:hover
					border-color $red
				&:hover ~ i
					color $red
			&-input
				width calc(100% - 60px)
				display flex
				background-color #FCFCFC
				position relative
				margin 0 30px 15px 30px
				align-items center
				&:nth-child(4)
					margin-bottom 25px
				& i
					position absolute
					transition .3s
					left 20px
					padding-right 15px
					color #e7e7e7
					font-size 20px
					border-right 1px solid #e7e7e7
			&-button
				width 100%
				padding 0 30px
				margin-bottom 15px
				& button
					background-color $red
					padding 16px
					text-transform uppercase
					color $white
					font-size 0.75rem
					font-family $Bold
					cursor pointer
					line-height 16px
					border-radius 8px
					border none
					width 100%
					transition .3s
					&:hover
						box-shadow 0 0 4px #d66060
			&-policy
				padding 0 30px
				font-size 0.5rem
				margin-bottom 16px
				font-family $Regular
				& span
					color #929292
					line-height 12px
					margin-right 2px
				& a
					color $red
					display inline-block
					text-shadow 0px 3px white
					border-bottom 1px solid $redborder
					transition .3s
					&:hover
						color $text
						border-color $text
			&-text
				padding 10px 30px
				background-color #F8F8F8
				display flex
				align-items center
				justify-content center
				& p
					width 80%
					color $text
					text-align center
					font-size 0.75rem
					line-height 20px
					font-family $Light
.contentText
	.business-single
		display flex
		justify-content space-between
		flex-wrap wrap
		.content
			&__links
				margin-bottom 10px
				&-title
					margin-bottom 20px
					font-family $Regular
					font-size 1.375rem
					line-height 33px
					color $black
				&-items
					display flex
					justify-content space-between
					flex-wrap wrap
					&-item
						transition .3s
						border 1px solid #E7E7E7
						padding 25px 20px
						font-family $Regular
						justify-content center
						display flex
						font-size 1.375rem
						line-height 33px
						flex-basis calc(33.33334% - 20px)
						border-radius 8px
						color $black
						margin 0 20px 20px 0
						& span
							line-height 30px
							text-shadow 0px 3px $white
							border-bottom 1px solid $redborder
							transition text-shadow .3s
						&:nth-child(3n+3)
							margin-right 0
						&:hover
							background-color $text
							color $white
						&:hover span
							text-shadow 0px 3px $text
							border-color rgba(255, 255, 255, 0.2)
.separator
	border-top 1px solid #E7E7E7
	width 100%
	margin-top 30px
@media(max-width: 1065px)
	.side-wrapper .side-callback
		margin-bottom 30px
	#business-single
		.blog-single__sidebar-item:nth-child(4)
			flex-basis 100%
		.form
			display none
		.blog-single__sidebar-item
			display block
			border none
			padding 0
			margin-bottom 30px
			background linear-gradient(239.03deg, #D53F3F 15.53%, #9E2020 81.03%)
			&-bg
				position absolute
				height 100%
				left -50%
				top 0
				bottom 0
				width 100%
				background url(/images/callback-bg.png) 100% 50% no-repeat
				background-size cover
	.contentText
		.business-single
			flex-wrap wrap
			.content
				flex-basis 100%
				padding-top 20px
				&__links
					&-items
						&-item
							flex-basis calc(50% - 20px)
							&:nth-child(2n)
								margin-right 0px
							&:nth-child(3n+3)
								margin-right 20px
		.blog-single
			&__sidebar
				&-item
					&-callback
						justify-content space-between
						&-container
							flex-basis 49%
						&-button
							flex-basis 49%
						&-policy
							flex-basis 49%
	.contentCallback
		.business-single
			flex-wrap wrap
			.content
				flex-basis 100%
			.side-wrapper
				padding-top 0
				flex-basis 100%
				.side-callback
					&-form
						display grid
						grid-template-columns repeat(2, 1fr)
						&-title
							&:nth-child(1)
								grid-column 1 / 2
						&-title
							&:nth-child(3)
								grid-column 2 / 3
								grid-row 1 / 2
								padding-left 0
						&-input
							&:nth-child(2)
								grid-column 1 / 2
								margin-bottom 20px
						&-input
							&:nth-child(4)
								grid-column 2 / 3
								margin-bottom 20px
								margin-left 0
								margin-right 0
								width calc(100% - 30px)
						&-text
							grid-column 2 / 3
							margin-bottom 20px
							padding 10px
							border-radius 8px
							width calc(100% - 30px)
							& p
								width 100%
						&-button
							margin-bottom 20px
						&-policy
							order 7
							grid-column 1 / 3
@media(max-width: 991px)
	.business-single
		&__clients
			&-items
				&-item
					flex-basis 33%
		.content
			overflow hidden
		.table-full
			overflow hidden
			overflow-x scroll
		.content
			&__table
				min-width 991px
@media(max-width: 768px)
	.contentCallback
		.business-single
			.side-wrapper
				.side-callback
					&-form
						&-policy
							& span
								font-size 0.625rem
							& a
								font-size 0.625rem
	.contentText
		.blog-single
			&__sidebar
				&-item
					&-callback
						&-container
							flex-basis 100%
						&-button
							flex-basis 100%
						&-policy
							flex-basis 100%
	.business-single
		.projects
			margin-top 30px
			&__slider
				.swiper-button-next
					right 15px
				.swiper-button-prev
					left 15px
				&-slide
					&-container
						&-titles
							&-title
								text-align center
						width 75%
						.slide__body
							flex-wrap wrap
							&-item
								flex-basis 100%
								display inline
								text-align center
								margin-bottom 10px
								&-title
									font-size 0.75rem
									line-height 18px
									margin-bottom 0
									display inline
								&-text
									display inline
									margin-left 4px
						.slide__footer
							&-item
								& span
									display none
								& i
									margin-right 0
@media(max-width: 650px)
	.contentCallback
		.business-single
			.content
				flex-basis 100%
			.side-wrapper
				flex-basis 100%
				.side-callback
					&-form
						display block
						&-title
							padding-left 30px
							&:nth-child(3)
								padding-left 30px
						&-input
							margin-bottom 20px
							&:nth-child(4)
								margin 0 30px 25px 30px
								width calc(100% - 60px)
						&-text
							margin-bottom 0px
							padding 10px 30px
							border-radius 0
							width 100%
							& p
								width 80%
	.contentText
		.business-single
			.content
				&__links
					&-items
						&-item
							padding 12px
							font-size .9rem
							line-height 24px
							flex-basis calc(50% - 10px)
							&:nth-child(3n+3)
								margin-right 20px
	.business-single
		&__clients
			padding 30px 10px
			&-items
				&-item
					flex-basis 50%
