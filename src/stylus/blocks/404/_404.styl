.error
	height 580px
	display flex
	align-items center
	overflow hidden
	position relative
	justify-content space-between
	&__block
		&:nth-child(1)
			flex-basis 35%
			display flex
			flex-direction column
			justify-content center
			z-index 1
		&:nth-child(2)
			flex-basis 50px
			min-width 50%
			position absolute
			height 100%
			top 0
			left 35%
			& img
				position absolute
				bottom 0
				left 0
		&:nth-child(3)
			flex-basis 15%
			display flex
			z-index 1
			flex-direction column
			justify-content center
			margin-top 50px
		&-symbol
			width 102px
			margin-bottom 30px
		&-desc
			font-family $Regular
			line-height 26px
			font-size 0.825rem
			color $text
			margin-bottom 20px
			& a
				color $red
				border-bottom 1px solid $red
				transition .3s
				margin 0 4px
				&:hover
					color $text
					border-color $text
		&-imgsmall
			display none
		&-img
			display block
		&-link
			& a
				color $red
				border-bottom 1px solid $redborder
				transition .3s
				font-family $Regular
				line-height 26px
				font-size 0.825rem
				&:hover
					color $text
					border-color $text
		&-title
			margin-top 50px
			font-family $Light
			margin-bottom 30px
			font-size 3.25rem
			color $red
			display flex
			flex-wrap wrap
			&-text
				color $black
				line-height 64px
				margin-right 15px
			&-dynamic
				line-height 64px
		&-item
			flex-basis 100%
			margin 14px 0
			display flex
			align-items center
			&-symbol
				flex-basis 50%
			&-text
				flex-basis 50%
				font-family $SemiBold
				font-size 0.625rem
				text-transform uppercase
				color #c5c5c5
				line-height 14px
				letter-spacing 1px
			&:nth-child(1)
				margin-top 50px
@media(max-width: 991px)
	.error
		height 500px
		&__block
			&-imgsmall
				display block
			&-img
				display none
			&:nth-child(1)
				flex-basis 40%
			&:nth-child(2)
				left 30%
			&-item
				flex-wrap wrap
				&-text
					flex-basis 100%
					text-align center
					margin-top 4px
				&-symbol
					flex-basis 100%
					display flex
					justify-content center
@media(max-width: 768px)
	#error
		.g-wrapper
			padding 0 0 0 20px
	.error
		height 100%
		&__block
			&-title
				margin-top 100px
				font-size 2rem
			&:nth-child(3)
				display none
			&-link
				&:last-child
					margin-bottom 40px
@media(max-width: 650px)
	.error
		&__block
			&:nth-child(1)
				flex-basis 80%
			&-imgsmall
				opacity .1
